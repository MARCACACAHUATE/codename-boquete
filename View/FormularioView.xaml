<UserControl x:Class="codename_boquete.View.FormularioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:codename_boquete.View"
             xmlns:viewModel="clr-namespace:codename_boquete.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="10">

    <UserControl.DataContext>
        <viewModel:FormularioViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type viewModel:FugaDetailViewModel}">
            <local:FugaDetailView/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>


        <!-- Formulario -->
        <StackPanel>
            <TextBlock FontFamily="JetBrainsMono NF"
                       FontSize="20"
                       Margin="0,10,0,10"
                       >Registro Nuevo</TextBlock>

            <Border CornerRadius="10"
                    Margin="0,10,0,10"
                    Height="300">
                <Border.Background>
                    <SolidColorBrush Color="#ebebeb"/>
                </Border.Background>

                    
                <StackPanel Grid.Column="0" Margin="10">

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,5,0,5">
                        <TextBlock Text="Numero de Serie" 
                                   FontFamily="JetBrainsMono NF"
                                   VerticalAlignment="Center"
                                   />
                        <TextBox Style="{StaticResource Textbox1}"
                                 Margin="10,0,0,0"
                                 />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,5">
                        <TextBlock Text="Nombre del Coil" 
                                   FontFamily="JetBrainsMono NF"
                                   VerticalAlignment="Center"/>
                        <ComboBox Style="{DynamicResource ComboBoxStyle1}"  
                                  FontFamily="JetBrainsMono NF"
                                  Margin="30,0,0,0"
                                  Width="150">
                            <ComboBoxItem>Arriva las Chivas</ComboBoxItem>
                            <ComboBoxItem>Arriva las Chivas</ComboBoxItem>
                            <ComboBoxItem>Arriva las Chivas</ComboBoxItem>
                            <ComboBoxItem>Arriva las Chivas</ComboBoxItem>
                            <ComboBoxItem>Arriva las Chivas</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,5">
                        <TextBlock Text="Coil para Scrap" 
                                   FontFamily="JetBrainsMono NF"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="Si"/>
                            </RadioButton>
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="No"/>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,5">
                        <TextBlock Text="Fuga Falsa" FontFamily="JetBrainsMono NF"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="Si" FontFamily="JetBrainsMono NF"/>
                            </RadioButton>
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="No" FontFamily="JetBrainsMono NF"/>
                            </RadioButton>
                        </StackPanel>
                        
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,5">
                        <TextBlock Text="Linea" FontFamily="JetBrainsMono NF"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="1"/>
                            </RadioButton >
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="2"/>
                            </RadioButton>
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="3"/>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,5">
                        <TextBlock Text="Turno" FontFamily="JetBrainsMono NF"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="1"/>
                            </RadioButton>
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="2"/>
                            </RadioButton>
                            <RadioButton Margin="10,0,10,0">
                                <TextBlock Text="3"/>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,5">
                        <TextBlock Text="Retrabajador" FontFamily="JetBrainsMono NF"/>
                        <ComboBox Width="150"
                                  FontFamily="JetBrainsMono NF"
                                  Style="{StaticResource ComboBoxStyle1}"
                                  Margin="30,0,0,0"
                                  >
                            <ComboBoxItem>Arriva las chvias</ComboBoxItem>
                            <ComboBoxItem>Arriva las chvias</ComboBoxItem>
                            <ComboBoxItem>Arriva las chvias</ComboBoxItem>
                            <ComboBoxItem>Arriva las chvias</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>


                    <Button Command="{Binding ShowFugaDetailViewCommand}"
                            Style="{StaticResource accionButton}"
                            FontFamily="JetBrainsMono NF"
                            Foreground="#ffffff"
                        Margin="0,5,0,5">
                        Añadir Fuga
                    </Button>

                </StackPanel>
                
            </Border>
        </StackPanel>

        <!-- Imagen-->
        <StackPanel Grid.Column="1" 
                    Margin="30" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Image Source="/Images/coil3x24.png" />
        </StackPanel>
    </Grid>
</UserControl>
